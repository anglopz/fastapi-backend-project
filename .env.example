# FastAPI Application Environment Variables
# Copy this file to .env and update with your actual values

# ============================================
# Security Settings
# ============================================
# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# ============================================
# Database Settings (PostgreSQL)
# ============================================
# If not provided, the app will fallback to SQLite (dev.db)
# For Docker Compose, use the service names: db, redis
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=fastapi_db

# ============================================
# Redis Settings
# ============================================
# Redis connection URL
# For Docker Compose: redis://redis:6379
# For local development: redis://localhost:6379
REDIS_URL=redis://localhost:6379
